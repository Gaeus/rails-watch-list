      <h2 class="list-name"><%= list.name %></h2>
      <%= form_with url: add_movie_to_list_path, method: :post, local: true do %>
        <%= hidden_field_tag :movie_id, @movie.id %>
        <%= hidden_field_tag :list_id, list.id %>
        <%= submit_tag "Ajouter Ã  cette liste" %>
      <% end %>
    </div>
  <% end %>
</div>
